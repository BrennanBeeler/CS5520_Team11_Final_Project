<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/class_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="5dp"
            tools:srcCompat="@mipmap/ic_launcher_mm_round"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/class_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/class_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="class period"
            app:layout_constraintStart_toEndOf="@+id/class_icon"
            app:layout_constraintTop_toBottomOf="@+id/class_name"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/class_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="class code"
            app:layout_constraintTop_toBottomOf="@+id/class_period"
            app:layout_constraintStart_toEndOf="@+id/class_icon"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>